<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    tools:context="learnlanguages.hk.com.activities.CallActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/final_v14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="86dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:padding="40dp"
        android:weightSum="6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:weightSum="3">

            <TextView
                android:id="@+id/tv_phone_number"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/shape_number_container"
                android:gravity="right"
                android:maxLines="1"
                android:padding="3dp"
                android:textColor="#397bcc"
                android:textSize="36sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                style="@style/PhoneNumberStyle"
                android:text="1" />

            <TextView
                style="@style/PhoneNumberStyle"

                android:text="2" />

            <TextView
                style="@style/PhoneNumberStyle"
                android:text="3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                style="@style/PhoneNumberStyle"

                android:text="4" />

            <TextView
                style="@style/PhoneNumberStyle"
                android:text="5" />

            <TextView

                style="@style/PhoneNumberStyle"
                android:text="6" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView

                style="@style/PhoneNumberStyle"
                android:text="7" />

            <TextView
                style="@style/PhoneNumberStyle"

                android:text="8" />

            <TextView
                style="@style/PhoneNumberStyle"

                android:text="9" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                style="@style/PhoneNumberStyle"
                android:text="*" />

            <TextView
                style="@style/PhoneNumberStyle"
                android:text="0" />

            <TextView
                style="@style/PhoneNumberStyle"
                android:text="#" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>